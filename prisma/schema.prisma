// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model tile {
  id          Int     @id @default(autoincrement())
  image       String
  description String?
}

model shuffled_tiles {
  gameid      String @id @default(uuid())
  order       Int[]
  current     Int
}

model played_cards {
  gameid      String
  cardid      Int
  rotation    Int

  @@id([gameid, cardid])
}
